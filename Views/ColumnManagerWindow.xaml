<Window x:Class="LogMaverick.Views.ColumnManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="컬럼 관리" Height="360" Width="320" WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        Background="#111" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
        <TextBlock Text="표시할 컬럼 선택" Foreground="#888" FontSize="11" Margin="0,0,0,10"/>
        <StackPanel x:Name="ColPanel" Grid.Row="1"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="적용" Click="Apply_Click" Width="80" Height="28" Background="#007AFF" Foreground="White" BorderThickness="0" Margin="0,0,8,0"/>
            <Button Content="닫기" Click="Close_Click" Width="80" Height="28" Background="#2A2A2A" Foreground="#CCC" BorderBrush="#444"/>
        </StackPanel>
    </Grid>
</Window>
