<Window x:Class="LogMaverick.Views.ConfigWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Server Configuration" Height="500" Width="600" Background="#111">
<Grid Margin="20">
    <Grid.ColumnDefinitions><ColumnDefinition Width="180"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
    <Grid.RowDefinitions><RowDefinition Height="*"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
    <ListBox x:Name="SrvList" Background="#222" Foreground="White" BorderThickness="0" DisplayMemberPath="Alias" SelectionChanged="SrvList_SelectionChanged"/>
    <StackPanel Grid.Column="1" Margin="15,0,0,0">
        <TextBlock Text="Alias" Foreground="#888" FontSize="11"/>
        <TextBox x:Name="TxtAlias" Background="#222" Foreground="White" BorderBrush="#444" Margin="0,3,0,10" Padding="5"/>
        <TextBlock Text="Host" Foreground="#888" FontSize="11"/>
        <TextBox x:Name="TxtHost" Background="#222" Foreground="White" BorderBrush="#444" Margin="0,3,0,10" Padding="5"/>
        <TextBlock Text="Port" Foreground="#888" FontSize="11"/>
        <TextBox x:Name="TxtPort" Background="#222" Foreground="White" BorderBrush="#444" Margin="0,3,0,10" Padding="5"/>
        <TextBlock Text="Username" Foreground="#888" FontSize="11"/>
        <TextBox x:Name="TxtUser" Background="#222" Foreground="White" BorderBrush="#444" Margin="0,3,0,10" Padding="5"/>
        <TextBlock Text="Password" Foreground="#888" FontSize="11"/>
        <PasswordBox x:Name="TxtPass" Background="#222" Foreground="White" BorderBrush="#444" Margin="0,3,0,10" Padding="5"/>
        <TextBlock Text="Root Path" Foreground="#888" FontSize="11"/>
        <TextBox x:Name="TxtPath" Background="#222" Foreground="White" BorderBrush="#444" Margin="0,3,0,10" Padding="5"/>
    </StackPanel>
    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
        <Button Content="ADD" Click="Add_Click" Width="80" Height="30" Margin="5"/>
        <Button Content="DEL" Click="Del_Click" Width="80" Height="30" Margin="5"/>
        <Button Content="SAVE" Click="Save_Click" Width="80" Height="30" Margin="5" Background="#007AFF" Foreground="White"/>
    </StackPanel>
</Grid></Window>
