<Window x:Class="LogMaverick.Views.ConfigWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Server Configuration" Height="400" Width="500" Background="#111">
<Grid Margin="20">
    <Grid.RowDefinitions><RowDefinition Height="*"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
    <ListBox x:Name="SrvList" Background="#222" Foreground="White" BorderThickness="0"/>
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
        <Button Content="ADD" Click="Add_Click" Width="80" Height="30" Margin="5"/>
        <Button Content="DEL" Click="Del_Click" Width="80" Height="30" Margin="5"/>
        <Button Content="SAVE" Click="Save_Click" Width="80" Height="30" Margin="5" Background="#007AFF" Foreground="White"/>
    </StackPanel>
</Grid></Window>
