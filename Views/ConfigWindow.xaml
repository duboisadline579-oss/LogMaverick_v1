<Window x:Class="LogMaverick.Views.ConfigWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="서버 설정" Height="480" Width="600" Background="#0D0D0D" WindowStartupLocation="CenterOwner">
<Window.Resources>
    <Style x:Key="TabStyle" TargetType="TabItem">
        <Setter Property="Template"><Setter.Value>
            <ControlTemplate TargetType="TabItem">
                <Border x:Name="Bd" Background="#1A1A1A" Padding="14,8" Margin="0,0,2,0">
                    <ContentPresenter x:Name="Cp" ContentSource="Header" TextBlock.Foreground="#888" TextBlock.FontWeight="Bold" TextBlock.FontSize="12"/>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter TargetName="Bd" Property="Background" Value="#007AFF"/>
                        <Setter TargetName="Cp" Property="TextBlock.Foreground" Value="#FFFFFF"/>
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter TargetName="Bd" Property="Background" Value="#0055CC"/>
                        <Setter TargetName="Cp" Property="TextBlock.Foreground" Value="#FFFFFF"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value></Setter>
    </Style>
</Window.Resources>
<Grid Margin="15">
    <Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
    <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
    <TextBlock Text="서버 목록" Foreground="#777" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
    <ListBox x:Name="SrvList" Grid.Row="1" Background="#1A1A1A" Foreground="White" BorderBrush="#333" BorderThickness="1" DisplayMemberPath="Alias" SelectionChanged="SrvList_SelectionChanged"/>
    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
        <Button Content="+ NEW" Click="New_Click" Width="70" Height="28" Background="#252525" Foreground="#CCC" BorderBrush="#444"/>
        <Button x:Name="BtnDel" Content="DELETE" Click="Del_Click" Width="70" Height="28" Background="#1A1A1A" Foreground="#FF4500" BorderBrush="#FF4500" BorderThickness="1" Margin="5,0,0,0" IsEnabled="False"/>
    </StackPanel>
    <StackPanel Grid.Column="1" Grid.RowSpan="3" Margin="15,0,0,0">
        <TextBlock Text="서버 정보" Foreground="#4DA6FF" FontSize="13" FontWeight="Bold" Margin="0,0,0,12"/>
        <TextBlock Text="Alias" Foreground="#888" FontSize="11"/>
        <TextBox x:Name="TxtAlias" Background="#1A1A1A" Foreground="White" BorderBrush="#444" Margin="0,3,0,8" Padding="8,5"/>
        <TextBlock Text="Host" Foreground="#888" FontSize="11"/>
        <TextBox x:Name="TxtHost" Background="#1A1A1A" Foreground="White" BorderBrush="#444" Margin="0,3,0,8" Padding="8,5"/>
        <TextBlock Text="Port" Foreground="#888" FontSize="11"/>
        <TextBox x:Name="TxtPort" Text="22" Background="#1A1A1A" Foreground="White" BorderBrush="#444" Margin="0,3,0,8" Padding="8,5"/>
        <TextBlock Text="Username" Foreground="#888" FontSize="11"/>
        <TextBox x:Name="TxtUser" Background="#1A1A1A" Foreground="White" BorderBrush="#444" Margin="0,3,0,8" Padding="8,5"/>
        <TextBlock Text="Password" Foreground="#888" FontSize="11"/>
        <PasswordBox x:Name="TxtPass" Background="#1A1A1A" Foreground="White" BorderBrush="#444" Margin="0,3,0,8" Padding="8,5"/>
        <TextBlock Text="Root Path" Foreground="#888" FontSize="11"/>
        <TextBox x:Name="TxtPath" Text="/var/log" Background="#1A1A1A" Foreground="White" BorderBrush="#444" Margin="0,3,0,12" Padding="8,5"/>
        <Button Content="SAVE" Click="Save_Click" Width="80" Height="30" Background="#007AFF" Foreground="White" BorderThickness="0" HorizontalAlignment="Right"/>
    </StackPanel>
</Grid>
</Window>
