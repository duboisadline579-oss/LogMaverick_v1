<Window x:Class="LogMaverick.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LOG MAVERICK v3" Height="900" Width="1550" Background="#0F0F0F">
    <Grid>
        <Grid.ColumnDefinitions><ColumnDefinition Width="300"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
        <Border Background="#161616" BorderBrush="#252525" BorderThickness="0,0,1,0">
            <StackPanel Margin="25">
                <TextBlock Text="LOG MAVERICK" Foreground="#007AFF" FontSize="20" FontWeight="Black" Margin="0,0,0,35"/>
                <TextBlock Text="CONNECTIONS" Foreground="#555" FontSize="10" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding Servers}" DisplayMemberPath="Alias" Height="200" Background="#222" Foreground="White" BorderThickness="0" x:Name="ServerListBox"/>
                <Button Content="CONNECT" Height="38" Background="#007AFF" Foreground="White" Margin="0,10" Click="BtnConnect_Click"/>
                <TextBlock Text="{Binding StatusText}" Foreground="{Binding StatusColor}" HorizontalAlignment="Center" Margin="0,20"/>
            </StackPanel>
        </Border>
        <ListView Grid.Column="1" ItemsSource="{Binding LogTableData}" Background="Transparent" BorderThickness="0" MouseDoubleClick="Log_DoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="TIME" Width="180" DisplayMemberBinding="{Binding Time}"/>
                    <GridViewColumn Header="LEVEL" Width="60" DisplayMemberBinding="{Binding Level}"/>
                    <GridViewColumn Header="MESSAGE" Width="1000">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate><TextBlock Text="{Binding Message}" Foreground="{Binding TextColor}" FontFamily="Consolas"/></DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
