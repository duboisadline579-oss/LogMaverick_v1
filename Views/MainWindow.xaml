<Window x:Class="LogMaverick.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2003/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2003/xaml"
        Title="LogMaverick - Deep Monitoring" Height="800" Width="1200" Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions><RowDefinition Height="50"/><RowDefinition Height="*"/></Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="#2D2D2D">
            <Button Content="Connect" Width="100" Margin="10" Click="Connect_Click"/>
            <Button Content="Pause" Width="100" Margin="10" Click="Pause_Click"/>
            <TextBlock Text="EPS Analysis: Running" Foreground="Lime" VerticalAlignment="Center" Margin="20,0"/>
        </StackPanel>
        <ListBox Grid.Row="1" ItemsSource="{Binding Logs}" Background="Black" BorderThickness="0"
                 VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Message}" Foreground="{Binding Color}" FontFamily="Consolas" FontSize="12"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
