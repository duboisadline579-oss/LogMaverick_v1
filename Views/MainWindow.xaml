<Window x:Class="LogMaverick.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h="clr-namespace:LogMaverick.Helpers"
        Title="Log Maverick v3 Enterprise" Height="850" Width="1450" Background="#0A0A0A">
    <Window.Resources>
        <h:CountToVisibilityConverter x:Key="CountToVis"/>
        <h:PauseColorConverter x:Key="PauseColorConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#121212" BorderBrush="#222" BorderThickness="0,0,1,0">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel>
                    <TextBlock Text="MAVERICK v3" Foreground="#007AFF" FontSize="20" FontWeight="Black" Margin="0,0,0,20"/>
                    <TextBlock Text="SERVER" Foreground="#555" FontSize="10" FontWeight="Bold" Margin="0,5"/>
                    <ComboBox x:Name="SrvList" ItemsSource="{Binding Servers}" SelectedItem="{Binding SelectedServer}" DisplayMemberPath="Alias" Height="32" Margin="0,0,0,5"/>
                    <Button Content="SERVER CONFIG" Click="Config_Click" Height="28" Background="#252525" Foreground="#AAA" BorderThickness="0"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <TextBlock Text="LOG EXPLORER" Foreground="#555" FontSize="10" FontWeight="Bold" Margin="0,5"/>
                    <TreeView x:Name="FileTree" Height="400" Background="#0A0A0A" Foreground="#888" BorderThickness="0" MouseDoubleClick="File_DoubleClick"/>
                </StackPanel>
                <StackPanel Grid.Row="3">
                    <Button Content="START CONNECT" Click="Connect_Click" Height="40" Background="#007AFF" Foreground="White" FontWeight="Bold" Margin="0,5"/>
                    <Button Content="REFRESH TREE" Click="Refresh_Click" Height="30" Background="#222" Foreground="#888" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="#440000" Visibility="{Binding ErrorVisibility}" Height="45">
                <Button Click="ErrorBox_Click" Background="Transparent" BorderThickness="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš  EXCEPTIONS DETECTED:" Foreground="White" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="{Binding ErrorHistory.Count}" Foreground="White" Margin="10,0" VerticalAlignment="Center" FontWeight="Black"/>
                    </StackPanel>
                </Button>
            </Border>

            <Grid Grid.Row="1" Background="#161616" Padding="15,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" Background="#0A0A0A" Foreground="White" BorderBrush="#333" Height="35" VerticalContentAlignment="Center" Padding="10,0" Tag="SEARCH LOGS..."/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                    <Button Content="{Binding PauseStatusText}" Click="Pause_Click" Width="100" Height="35" Background="{Binding IsPaused, Converter={StaticResource PauseColorConverter}}" Foreground="White" Margin="0,0:5,0" FontWeight="Bold"/>
                    <Button Content="EXPORT" Click="Export_Click" Width="80" Height="35" Background="#222" Foreground="White" Margin="0,0,5,0"/>
                    <Button Content="CLEAR" Click="Clear_Click" Width="80" Height="35" Background="#222" Foreground="White"/>
                </StackPanel>
            </Grid>
            <TabControl x:Name="MainTabs" Grid.Row="2" Background="Transparent" BorderThickness="0" Margin="10">
                <TabControl.Resources>
                    <ContextMenu x:Key="LogMenu">
                        <MenuItem Header="Copy Message" Click="Copy_Click"/>
                        <MenuItem Header="Trace TID" Click="Log_DoubleClick"/>
                        <Separator Background="#333"/>
                        <MenuItem Header="Exclude this TID" Click="Exclude_Click"/>
                    </ContextMenu>
                    <Style TargetType="ListView">
                        <Setter Property="Background" Value="#0A0A0A"/><Setter Property="Foreground" Value="#BBB"/><Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="ContextMenu" Value="{StaticResource LogMenu}"/>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="MACHINE">
                    <ListView ItemsSource="{Binding MachineLogs, NotifyOnTargetUpdated=True}" TargetUpdated="LogList_TargetUpdated" MouseDoubleClick="Log_DoubleClick">
                        <ListView.View><GridView><GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time, StringFormat={}{0:HH:mm:ss}}" Width="100"/><GridViewColumn Header="TID" DisplayMemberBinding="{Binding Tid}" Width="70"/><GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="800"/></GridView></ListView.View>
                    </ListView>
                </TabItem>
                <TabItem Header="PROCESS">
                    <ListView ItemsSource="{Binding ProcessLogs, NotifyOnTargetUpdated=True}" TargetUpdated="LogList_TargetUpdated" MouseDoubleClick="Log_DoubleClick">
                        <ListView.View><GridView><GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time, StringFormat={}{0:HH:mm:ss}}" Width="100"/><GridViewColumn Header="TID" DisplayMemberBinding="{Binding Tid}" Width="70"/><GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="800"/></GridView></ListView.View>
                    </ListView>
                </TabItem>
                <TabItem Header="DRIVER">
                    <ListView ItemsSource="{Binding DriverLogs, NotifyOnTargetUpdated=True}" TargetUpdated="LogList_TargetUpdated" MouseDoubleClick="Log_DoubleClick">
                        <ListView.View><GridView><GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time, StringFormat={}{0:HH:mm:ss}}" Width="100"/><GridViewColumn Header="TID" DisplayMemberBinding="{Binding Tid}" Width="70"/><GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="800"/></GridView></ListView.View>
                    </ListView>
                </TabItem>
                <TabItem Header="OTHERS">
                    <ListView ItemsSource="{Binding OtherLogs, NotifyOnTargetUpdated=True}" TargetUpdated="LogList_TargetUpdated" MouseDoubleClick="Log_DoubleClick">
                        <ListView.View><GridView><GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time, StringFormat={}{0:HH:mm:ss}}" Width="100"/><GridViewColumn Header="TID" DisplayMemberBinding="{Binding Tid}" Width="70"/><GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="800"/></GridView></ListView.View>
                    </ListView>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
