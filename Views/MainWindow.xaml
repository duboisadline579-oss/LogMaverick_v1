<Window x:Class="LogMaverick.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h="clr-namespace:LogMaverick.Helpers"
        Title="Log Maverick v3" Height="850" Width="1450" Background="#0A0A0A"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions><RowDefinition Height="*"/><RowDefinition Height="25"/></Grid.RowDefinitions>
        <Grid.ColumnDefinitions><ColumnDefinition Width="300"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
        <Border Grid.Row="0" Background="#121212" BorderBrush="#222" BorderThickness="0,0,1,0">
            <Grid Margin="15">
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="*"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                <StackPanel>
                    <TextBlock Text="MAVERICK v3" Foreground="#007AFF" FontSize="20" FontWeight="Black" Margin="0,0,0,15"/>
                    <TextBlock Text="{Binding ConnectionStatusText}" Foreground="{Binding ConnectionStatusColor}" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="36"/></Grid.ColumnDefinitions>
                        <ComboBox x:Name="SrvList" ItemsSource="{Binding Servers}" SelectedItem="{Binding SelectedServer}" DisplayMemberPath="Alias" Height="34" Background="#1E1E1E" Foreground="White" BorderBrush="#333"/>
                        <Button Grid.Column="1" Content="âš™" Click="Config_Click" Width="34" Height="34" Background="#1E1E1E" Foreground="#007AFF" BorderBrush="#333" FontSize="16" Margin="2,0,0,0" ToolTip="ì„œë²„ ì„¤ì •"/>
                    </Grid>
                    <Button Content="â–¶  START CONNECT" Click="Connect_Click" Height="38" Background="#007AFF" Foreground="White" FontWeight="Bold" Margin="0,8,0,4" FontSize="13"/>
                    <Button Content="â¹  DISCONNECT" Click="Disconnect_Click" Height="32" Background="#1A1A1A" Foreground="#FF4500" BorderBrush="#FF4500" BorderThickness="1" FontSize="12"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="0,15,0,0">
                    <TextBlock Text="FILE EXPLORER" Foreground="#555" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="â€» REFRESH í›„ íŒŒì¼ ì„ íƒ â†’ CONNECT" Foreground="#444" FontSize="10" Margin="0,0,0,5" TextWrapping="Wrap"/>
                    <TreeView x:Name="FileTree" Height="370" Background="#0D0D0D" Foreground="#888" BorderBrush="#222" BorderThickness="1" MouseDoubleClick="File_DoubleClick">
                        <TreeView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“„ " FontSize="11"/>
                                    <TextBlock Text="{Binding Name}" FontSize="11"/>
                                </StackPanel>
                            </DataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </StackPanel>
                <StackPanel Grid.Row="3">
                    <Button Content="ðŸ”„  REFRESH TREE" Click="Refresh_Click" Height="30" Background="#1A1A1A" Foreground="#666" BorderBrush="#333" BorderThickness="1" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
            <Border Background="#440000" Visibility="{Binding ErrorVisibility}" Height="45">
                <Button Click="ErrorBox_Click" Background="Transparent" BorderThickness="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš   EXCEPTIONS: " Foreground="White" VerticalAlignment="Center" Margin="10,0"/>
                        <TextBlock Text="{Binding ErrorHistory.Count}" Foreground="White" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text=" ê±´ â€” í´ë¦­í•˜ì—¬ ìƒì„¸ë³´ê¸°" Foreground="#FFB0B0" VerticalAlignment="Center" FontSize="11"/>
                    </StackPanel>
                </Button>
            </Border>
            <Border Grid.Row="1" Background="#161616" Padding="12,8" BorderBrush="#222" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                    <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" Background="#0D0D0D" Foreground="White" BorderBrush="#333" BorderThickness="1" Height="34" VerticalContentAlignment="Center" Padding="10,0"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                        <Button Content="{Binding PauseStatusText}" Click="Pause_Click" Width="90" Height="34" Background="{Binding IsPaused, Converter={StaticResource PauseColorConverter}}" Foreground="White" Margin="0,0,4,0" FontWeight="Bold"/>
                        <Button Content="EXPORT" Click="Export_Click" Width="70" Height="34" Background="#1E1E1E" Foreground="#AAA" BorderBrush="#333" Margin="0,0,4,0"/>
                        <Button Content="ALL" Click="ExportAll_Click" Width="50" Height="34" Background="#1E1E1E" Foreground="#AAA" BorderBrush="#333" Margin="0,0,4,0" ToolTip="ì „ì²´ ë¡œê·¸ ë‚´ë³´ë‚´ê¸°"/>
                        <Button Content="CLEAR" Click="Clear_Click" Width="70" Height="34" Background="#1E1E1E" Foreground="#AAA" BorderBrush="#333"/>
                    </StackPanel>
                </Grid>
            </Border>
            <TabControl x:Name="MainTabs" Grid.Row="2" Background="Transparent" BorderThickness="0" Margin="8">
                <TabControl.Resources>
                    <ContextMenu x:Key="LogMenu">
                        <MenuItem Header="ðŸ“‹ Copy Message" Click="Copy_Click"/>
                        <MenuItem Header="ðŸ” Trace TID" Click="Log_DoubleClick"/>
                        <Separator/>
                        <MenuItem Header="ðŸš« Exclude this TID" Click="Exclude_Click"/>
                    </ContextMenu>
                    <Style TargetType="TabItem">
                        <Setter Property="Foreground" Value="#666"/>
                        <Setter Property="Background" Value="#111"/>
                        <Setter Property="Padding" Value="16,6"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Style.Triggers><Trigger Property="IsSelected" Value="True"><Setter Property="Foreground" Value="#007AFF"/></Trigger></Style.Triggers>
                    </Style>
                    <Style TargetType="ListView">
                        <Setter Property="Background" Value="#0A0A0A"/>
                        <Setter Property="Foreground" Value="#BBB"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="ContextMenu" Value="{StaticResource LogMenu}"/>
                        <Setter Property="VirtualizingStackPanel.IsVirtualizing" Value="True"/>
                        <Setter Property="VirtualizingStackPanel.VirtualizationMode" Value="Recycling"/>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="MACHINE"><ListView ItemsSource="{Binding MachineLogs}" TargetUpdated="LogList_TargetUpdated" MouseDoubleClick="Log_DoubleClick"><ListView.View><GridView><GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time, StringFormat={}{0:HH:mm:ss}}" Width="100"/><GridViewColumn Header="TID" DisplayMemberBinding="{Binding Tid}" Width="70"/><GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="750"/></GridView></ListView.View></ListView></TabItem>
                <TabItem Header="PROCESS"><ListView ItemsSource="{Binding ProcessLogs}" TargetUpdated="LogList_TargetUpdated" MouseDoubleClick="Log_DoubleClick"><ListView.View><GridView><GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time, StringFormat={}{0:HH:mm:ss}}" Width="100"/><GridViewColumn Header="TID" DisplayMemberBinding="{Binding Tid}" Width="70"/><GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="750"/></GridView></ListView.View></ListView></TabItem>
                <TabItem Header="DRIVER"><ListView ItemsSource="{Binding DriverLogs}" TargetUpdated="LogList_TargetUpdated" MouseDoubleClick="Log_DoubleClick"><ListView.View><GridView><GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time, StringFormat={}{0:HH:mm:ss}}" Width="100"/><GridViewColumn Header="TID" DisplayMemberBinding="{Binding Tid}" Width="70"/><GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="750"/></GridView></ListView.View></ListView></TabItem>
                <TabItem Header="OTHERS"><ListView ItemsSource="{Binding OtherLogs}" TargetUpdated="LogList_TargetUpdated" MouseDoubleClick="Log_DoubleClick"><ListView.View><GridView><GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time, StringFormat={}{0:HH:mm:ss}}" Width="100"/><GridViewColumn Header="TID" DisplayMemberBinding="{Binding Tid}" Width="70"/><GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="750"/></GridView></ListView.View></ListView></TabItem>
            </TabControl>
        </Grid>
        <StatusBar Grid.Row="1" Grid.ColumnSpan="2" Background="#007AFF">
            <StatusBarItem><TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="11" FontWeight="Bold" Margin="5,0"/></StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
