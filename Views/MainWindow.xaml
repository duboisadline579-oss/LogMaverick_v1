<Window x:Class="LogMaverick.Views.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:h="clr-namespace:LogMaverick.Helpers" Title="Log Maverick v3 Enterprise" Height="850" Width="1450" Background="#0A0A0A">
<Grid><Grid.ColumnDefinitions><ColumnDefinition Width="280"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
<Border Background="#121212" BorderBrush="#222" BorderThickness="0,0,1,0"><StackPanel Margin="15">
<TextBlock Text="MAVERICK v3" Foreground="#007AFF" FontSize="18" FontWeight="Black" Margin="0,0,0,20"/>
<ComboBox x:Name="SrvList" ItemsSource="{Binding Servers}" SelectedItem="{Binding SelectedServer}" DisplayMemberPath="Alias" Height="32" Margin="0,5"/>
<Button Content="⚙ CONFIGURATION" Click="Config_Click" Height="32" Margin="0,5" Background="#252525" Foreground="White" BorderThickness="0"/>
<TextBlock Text="EXPLORER" Foreground="#444" FontSize="11" FontWeight="Bold" Margin="0,15,0,5"/>
<TreeView x:Name="FileTree" Height="450" Background="Transparent" Foreground="#888" BorderThickness="0" MouseDoubleClick="File_DoubleClick"/></StackPanel></Border>
<Grid Grid.Column="1"><Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="*"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
<Border Background="#440000" Visibility="{Binding ErrorVisibility}" Height="40">
<Button Content="{Binding ErrorHistory.Count, StringFormat='⚠ {0} EXCEPTIONS DETECTED'}" Click="ErrorBox_Click" Background="Transparent" Foreground="White" BorderThickness="0" FontWeight="Bold"/></Border>
<Grid Grid.Row="1" Margin="15,10"><Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
<TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" Background="#181818" Foreground="White" BorderBrush="#333" Height="32" VerticalContentAlignment="Center" Padding="10,0" Margin="0,0,10,0"/>
<Button Content="EXPORT LOGS" Click="Export_Click" Width="100" Background="#007AFF" Foreground="White" BorderThickness="0"/></Grid>
<TabControl x:Name="MainTabs" Grid.Row="2" Background="Transparent" BorderThickness="0" Margin="10,0">
<TabControl.Resources>
<ContextMenu x:Key="LogMenu"><MenuItem Header="Copy Message" Click="Copy_Click"/><MenuItem Header="Trace TID" Click="Log_DoubleClick"/><Separator/><MenuItem Header="Exclude this TID" Click="Exclude_Click"/></ContextMenu>
<Style TargetType="ListView"><Setter Property="Background" Value="#0A0A0A"/><Setter Property="BorderThickness" Value="0"/><Setter Property="Foreground" Value="#DCDCDC"/><Setter Property="ContextMenu" Value="{StaticResource LogMenu}"/></Style>
</TabControl.Resources>
<TabItem Header="MACHINE"><ListView ItemsSource="{Binding MachineLogs}" NotifyOnTargetUpdated="True" TargetUpdated="LogList_TargetUpdated" MouseDoubleClick="Log_DoubleClick"/></TabItem>
<TabItem Header="PROCESS"><ListView ItemsSource="{Binding ProcessLogs}" NotifyOnTargetUpdated="True" TargetUpdated="LogList_TargetUpdated" MouseDoubleClick="Log_DoubleClick"/></TabItem>
<TabItem Header="DRIVER"><ListView ItemsSource="{Binding DriverLogs}" NotifyOnTargetUpdated="True" TargetUpdated="LogList_TargetUpdated" MouseDoubleClick="Log_DoubleClick"/></TabItem>
<TabItem Header="OTHERS"><ListView ItemsSource="{Binding OtherLogs}" NotifyOnTargetUpdated="True" TargetUpdated="LogList_TargetUpdated" MouseDoubleClick="Log_DoubleClick"/></TabItem>
</TabControl>
<StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
<Button Content="CONNECT" Click="Connect_Click" Width="110" Height="32" Margin="5" Background="#007AFF" Foreground="White" BorderThickness="0"/>
<Button Content="CLEAR ALL" Click="Clear_Click" Width="110" Height="32" Margin="5" Background="#222" Foreground="White" BorderThickness="0"/></StackPanel></Grid></Grid></Window>
