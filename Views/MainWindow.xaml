<Window x:Class="LogMaverick.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LOG MAVERICK v3 Enterprise" Height="900" Width="1550" Background="#0F0F0F">
    <Grid>
        <Grid.ColumnDefinitions><ColumnDefinition Width="300"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
        <Border Background="#161616" BorderBrush="#252525" BorderThickness="0,0,1,0">
            <StackPanel Margin="20">
                <TextBlock Text="SERVER" Foreground="#555" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding Servers}" x:Name="SrvList" Height="150" Background="#222" Foreground="White" DisplayMemberPath="Alias"/>
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <Button Content="ADD" Click="Add_Click" Width="60" Margin="0,0,5,0"/>
                    <Button Content="DEL" Click="Del_Click" Width="60"/>
                </StackPanel>
                <TreeView x:Name="FileTree" Height="400" Margin="0,10" Background="Transparent" Foreground="White" MouseDoubleClick="File_DoubleClick"/>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
            <Border Background="#440000" Visibility="{Binding ErrorVisibility}" Height="40">
                <TextBlock Text="{Binding ErrorCount, StringFormat='âš  {0} NEW ERRORS DETECTED'}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
            </Border>
            <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
                <TabItem Header="MACHINE"><ListView ItemsSource="{Binding MachineLogs}" Background="Transparent" BorderThickness="0" MouseDoubleClick="Log_DoubleClick"/></TabItem>
                <TabItem Header="PROCESS"><ListView ItemsSource="{Binding ProcessLogs}" Background="Transparent" BorderThickness="0" MouseDoubleClick="Log_DoubleClick"/></TabItem>
                <TabItem Header="DRIVER"><ListView ItemsSource="{Binding DriverLogs}" Background="Transparent" BorderThickness="0" MouseDoubleClick="Log_DoubleClick"/></TabItem>
            </TabControl>
            <Button Content="ðŸ—‘ CLEAR" Click="Clear_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" Width="80" Height="30" Background="#333" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
