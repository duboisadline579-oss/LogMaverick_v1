<Window x:Class="LogMaverick.Views.ErrorWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Error History" Height="500" Width="900" Background="#1A1A1A">
<Grid>
    <Grid.RowDefinitions><RowDefinition Height="*"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
    <ListView x:Name="ErrorList" Background="#0A0A0A" Foreground="#DDDDDD" BorderThickness="0" MouseDoubleClick="Error_DoubleClick">
        <ListView.View><GridView>
            <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time, StringFormat={}{0:HH:mm:ss}}" Width="100"/>
            <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="80"/>
            <GridViewColumn Header="TID" DisplayMemberBinding="{Binding Tid}" Width="70"/>
            <GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="580"/>
        </GridView></ListView.View>
    </ListView>
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
        <Button Content="CLEAR" Click="Clear_Click" Width="80" Height="30" Background="#2A2A2A" Foreground="#CCCCCC" BorderBrush="#444" Margin="0,0,8,0"/>
        <Button Content="CLOSE" Click="Close_Click" Width="80" Height="30" Background="#007AFF" Foreground="White" BorderThickness="0"/>
    </StackPanel>
</Grid></Window>
