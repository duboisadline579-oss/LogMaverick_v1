<Window x:Class="LogMaverick.Views.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EXCEPTIONS" Height="600" Width="950"
        Background="#111" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <TabControl Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Foreground" Value="#888"/>
                    <Setter Property="Padding" Value="14,6"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="#FFF"/>
                            <Setter Property="Background" Value="#007AFF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TabControl.Resources>
            <TabItem Header="âš  ì—ëŸ¬ ížˆìŠ¤í† ë¦¬">
                <Grid>
                    <Grid.RowDefinitions><RowDefinition Height="*"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                    <ListView x:Name="ErrorList" Background="#0A0A0A" Foreground="#DDDDDD" BorderThickness="0" MouseDoubleClick="Error_DoubleClick">
                        <ListView.View><GridView>
                            <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time, StringFormat={}{0:HH:mm:ss}}" Width="90"/>
                            <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="90"/>
                            <GridViewColumn Header="TID" DisplayMemberBinding="{Binding Tid}" Width="70"/>
                            <GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="620"/>
                        </GridView></ListView.View>
                    </ListView>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button Content="CLEAR" Click="Clear_Click" Width="80" Height="28" Background="#2A2A2A" Foreground="#CCC" BorderBrush="#444" Margin="0,0,8,0"/>
                        <Button Content="CLOSE" Click="Close_Click" Width="80" Height="28" Background="#007AFF" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
