                    <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
                    <TextBlock Text="EXCEPTIONS ê°ì§€ ë° ì•Œë¦¼ì— ì‚¬ìš©í•  í‚¤ì›Œë“œ" Foreground="#888" FontSize="11" Margin="0,0,0,8"/>
                    <ListBox x:Name="KeywordList" Grid.Row="1" Background="#1A1A1A" Foreground="White" BorderBrush="#333" BorderThickness="1"/>
                    <Grid Grid.Row="2" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                        <TextBox x:Name="TxtKeyword" Background="#1A1A1A" Foreground="White" BorderBrush="#333" BorderThickness="1" Padding="8,5" ToolTip="ì˜ˆ: CRITICAL, OOM, FATAL"/>
                        <Button Grid.Column="1" Content="+ ADD" Click="AddKeyword_Click" Width="70" Height="30" Background="#007AFF" Foreground="White" BorderThickness="0" Margin="5,0"/>
                        <Button Grid.Column="2" Content="DELETE" Click="DelKeyword_Click" Width="70" Height="30" Background="#1A1A1A" Foreground="#FF4500" BorderBrush="#FF4500" BorderThickness="1"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
