<Window x:Class="LogMaverick.Views.ErrorWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Error History" Height="500" Width="800" Background="#1A1A1A">
<Grid><ListView x:Name="ErrorList" ItemsSource="{Binding ErrorHistory}" MouseDoubleClick="Error_DoubleClick" Background="Transparent" Foreground="White">
<ListView.View><GridView>
<GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time}" Width="150"/>
<GridViewColumn Header="TID" DisplayMemberBinding="{Binding Tid}" Width="80"/>
<GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}" Width="500"/>
</GridView></ListView.View></ListView></Grid></Window>
