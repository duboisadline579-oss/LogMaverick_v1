<Window x:Class="LogMaverick.Views.LogDetailWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Log Detail" Height="500" Width="700" Background="#161616" Foreground="White">
<Grid Margin="15">
    <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
    <StackPanel Margin="0,0,0,10">
        <TextBlock x:Name="TxtHeader" Foreground="#888" FontSize="11" FontFamily="Consolas"/>
        <TextBlock x:Name="TxtType" FontSize="11" FontWeight="Bold" Margin="0,3,0,0"/>
    </StackPanel>
    <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
        <TabItem Header="RAW">
            <TextBox x:Name="TxtRaw" IsReadOnly="True" Background="#0F0F0F" Foreground="#00FF41" TextWrapping="Wrap" Padding="10" FontFamily="Consolas" FontSize="12" BorderThickness="0" VerticalScrollBarVisibility="Auto"/>
        </TabItem>
        <TabItem Header="PRETTY">
            <TextBox x:Name="TxtPretty" IsReadOnly="True" Background="#0F0F0F" Foreground="#AADDFF" TextWrapping="Wrap" Padding="10" FontFamily="Consolas" FontSize="12" BorderThickness="0" VerticalScrollBarVisibility="Auto"/>
        </TabItem>
        <TabItem Header="KEY-VALUE" x:Name="TabKV">
            <ListView x:Name="KvList" Background="#0F0F0F" Foreground="#DDDDDD" BorderThickness="0">
                <ListView.View><GridView>
                    <GridViewColumn Header="Key" DisplayMemberBinding="{Binding Key}" Width="200"/>
                    <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Value}" Width="430"/>
                </GridView></ListView.View>
            </ListView>
        </TabItem>
    </TabControl>
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
        <Button Content="COPY" Click="Copy_Click" Width="80" Height="30" Background="#2A2A2A" Foreground="#CCCCCC" BorderBrush="#444" Margin="0,0,8,0"/>
        <Button Content="CLOSE" Click="Close_Click" Width="80" Height="30" Background="#007AFF" Foreground="White" BorderThickness="0"/>
    </StackPanel>
</Grid></Window>
