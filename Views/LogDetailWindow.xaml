<Window x:Class="LogMaverick.Views.LogDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log Detail" Height="600" Width="800"
        Background="#161616" Foreground="White"
        KeyDown="Window_KeyDown">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,0,0,8">
            <TextBlock x:Name="TxtHeader" Foreground="#888" FontSize="11" FontFamily="Consolas"/>
            <TextBlock x:Name="TxtType" FontSize="11" FontWeight="Bold" Margin="0,3,0,0"/>
        </StackPanel>
        <TextBox x:Name="TxtRaw" Grid.Row="1" Background="#0A0A0A" Foreground="#AADDFF" BorderBrush="#333" BorderThickness="1" FontFamily="Consolas" FontSize="11" IsReadOnly="True" TextWrapping="Wrap" MaxHeight="120" VerticalScrollBarVisibility="Auto" Margin="0,0,0,8" Padding="6"/>
        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
            <TextBox x:Name="TxtSearch" Background="#0D0D0D" Foreground="White" BorderBrush="#444" BorderThickness="1" Height="30" VerticalContentAlignment="Center" Padding="8,0" FontSize="12" TextChanged="Search_Changed"/>
            <TextBlock Grid.Column="0" Text="ðŸ” í‚¤ì›Œë“œ ê²€ìƒ‰ (Key/Value)..." Foreground="#555" FontSize="12" VerticalAlignment="Center" Margin="10,0" IsHitTestVisible="False" x:Name="SearchHint"/>
            <TextBlock Grid.Column="1" x:Name="TxtMatchCount" Foreground="#888" FontSize="11" VerticalAlignment="Center" Margin="8,0"/>
        </Grid>
        <ListView x:Name="KvList" Grid.Row="3" Background="#0F0F0F" Foreground="#DDDDDD" BorderThickness="0" SelectionMode="Extended">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Key" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Key}" Foreground="{Binding KeyColor}" FontWeight="Bold" FontFamily="Consolas" FontSize="12"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Value" Width="520">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Value}" Foreground="{Binding ValueColor}" FontFamily="Consolas" FontSize="12" TextWrapping="Wrap" IsReadOnly="True" Background="Transparent" BorderThickness="0" VerticalScrollBarVisibility="Auto" MaxHeight="200"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="Ctrl+C: ì„ íƒ ë³µì‚¬ | ë”ë¸”í´ë¦­: ì „ì²´ ë³µì‚¬" Foreground="#666" FontSize="10" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <Button Content="ðŸ“‹ ì „ì²´ë³µì‚¬" Click="Copy_Click" Width="90" Height="30" Background="#2A2A2A" Foreground="#CCCCCC" BorderBrush="#444" Margin="0,0,8,0"/>
            <Button Content="CLOSE" Click="Close_Click" Width="80" Height="30" Background="#007AFF" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
